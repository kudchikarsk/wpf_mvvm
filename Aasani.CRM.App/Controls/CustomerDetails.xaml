<UserControl x:Class="Aasani.CRM.App.Controls.CustomerDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aasani.CRM.App.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel  Orientation="Vertical">
        <TextBox Margin="0 0 0 0" x:Name="firstNameTextBox" TextChanged="firstNameTextBox_TextChanged" />
        <TextBox Margin="0 5" x:Name="lastNameTextBox" TextChanged="lastNameTextBox_TextChanged" />
        <TextBox Margin="0 5" x:Name="phoneTextBox" TextChanged="phoneTextBox_TextChanged" />
        <CheckBox Margin="0 5" Content="Is Developer" x:Name="isDeveloperChkBox" Click="isDeveloperChkBox_Click" />

    </StackPanel>
</UserControl>
